{
  "name": "Pocket Wallet",
  "version": "1.0.0",
  "description": "Cryptocurrency wallet for Ethereum blockchain",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Wallet",
    "default_icon": {
      "16": "./assets/16x16.png",
      "48": "./assets/48x48.png",
      "128": "./assets/128x128.png"
    }
  },
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}
